Private Class (DatePart) AMPMPart()
   sign = "a";
   pattern = "";
   minVal = 0;
   maxVal = 0;
   maxSize = 2;

   Macro getString(dt, frm)
      if (dt.hour >= 12)
         return frm.locale.PM;
      else
         return frm.locale.AM;
      end;
   end;

   Macro tryParse(dt, str, fromInd : Integer, frm)
      var ad = frm.locale.AM;
