Private Class (TimePart) TimeZonePart()
   sign = "Z";
   pattern = "";

   Macro getString(dt, frm)
      var TZ = frm.timezone;
      if (ValType(TZ) == V_UNDEF)
         return dt.getTZString();
      end;
      var s = "+";
      if (TZ < 0)
         s = "-";
         TZ = -TZ;
      end;
      return s + SU.padStart(TZ, 4, "0");
   end;

   Macro tryParse(dt, str, fromInd : Integer, frm)
      var z = "";
      var s = SubStr(str, fromInd, 1);
      var p;
      if (s == "-")
         p = SubStr(str, fromInd + 1, 4);
      elif (s == "+")
         p = SubStr(str, fromInd + 1, 4);
      else
         p = SubStr(str, fromInd, 4);
      end;
      dt.timezone = Int(s + p);
      if (TU_StrIsNumber(s))
         return fromInd + 5;
      else
         return fromInd + 6;
      end;
      OnError
         return 0;
   End;

   Macro isValid()
      return (pattern == "Z");
   End;
End;

Private Class (TimePart) TimeZoneISOPart()
   sign = "X";
   pattern = "";

   Macro getString(dt, frm)
      var TZ = frm.timezone;
      if (ValType(TZ) == V_UNDEF)
         TZ = dt.timezone;
      end;
      var s = "+";
      if (TZ < 0)
         s = "-";
         TZ = -TZ;
      end;
      if (pattern == "X")
         return s + SU.padStart(Int(TZ/100), 2, "0");
      elif (pattern == "XXX")
         return s + SU.padStart(Int(TZ/100), 2, "0") + ":" + SU.padStart(mod(TZ, 100), 2, "0");
      end;
      return 0;
   end;

   Macro tryParse(dt, str, fromInd : Integer, frm)
      var z = "";
      var s = SubStr(str, fromInd, 1);
      var p;
      if (pattern == "X")
         if ((s == "-") or (s == "+"))
            p = SubStr(str, fromInd + 1, 2);
         else
            return 0;
         end;
         dt.timezone = Int(s + SubStr(p, 1, 2) + "00");
         return fromInd + 3;
      elif (pattern == "XXX")
         if ((s == "-") or (s == "+"))
            p = SubStr(str, fromInd + 1, 5);
         else
            return 0;
         end;
         dt.timezone = Int(s + SubStr(p, 1, 2) + SubStr(p, 4, 2));
         return fromInd + 6;
      end;
      return 0;
      OnError
         return 0;
   End;

   Macro isValid()
      return ((pattern == "X") or (pattern == "XXX"));
   End;
End;


Private Macro getPart(s)
   var prt;
   if (s == "y")
      prt = YearPart();
   elif (s == "M")
      prt = MonthPart();
   elif (s == "L")
      prt = MonthPartCI();
   elif (s == "d")
      prt = DayPart();
   elif (s == "D")
      prt = DayInYearPart();
   elif (s == "H")
      prt = HourPart();
   elif (s == "a")
      prt = AMPMPart();
   elif (s == "m")
      prt = MinutePart();
   elif (s == "s")
      prt = SecondPart();
   elif (s == "S")
      prt = MilliSecondPart();
   elif (s == "E")
      prt = WeekDayPart();
   elif (s == "w")
      prt = WeekInYearPart();
   elif (s == "G")
      prt = EraPart();
   elif (s == "Z")
      prt = TimeZonePart();
   elif (s == "X")
      prt = TimeZoneISOPart();
   elif (s == "'")
      prt = CommentPart();
   else
      prt = TextPart();
   end;
   return prt;
End;

